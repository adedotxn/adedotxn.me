---
import Footer from "../home/Footer.astro";
import Navigation from "./Navigation.astro";
import "@fontsource/inter-tight";
import "@fontsource/inter-tight/600.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon_io/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon_io/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon_io/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon_io/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="adedotxn's website" />
    <meta
      name="keywords"
      content="philip adewole,adedotxn, engineer, software developer, frontend developer"
    />
    <meta name="author" content="Philip Adewole (adedotxn)" />
    <meta name="generator" content={Astro.generator} />
    <title>adedotxn.</title>
  </head>
  <body>
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  * {
    border: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    line-height: 1.5;
    font-size: 16px;

    background-color: var(--background);

    font-synthesis: none;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;
    --colab_pink: #ff6dcd;
    --colab_dark-purple: #5a60ea;
    --colab_mild-purple: #7797ff;
    --colab_light-purple: #f0f4ff;
    --colab_orange: #ffa02a;
    --colab_turq: #45dfcd;

    --background-dark: #161616;
    --accent-dark: #232323;
    --text-dark: white;
    --text-accent-00: #868686;
    --text-accent-01: rgb(181, 181, 181);

    --background-light: #ededed;
    --accent-light: #f1f3f4;
    --text-light: black;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --background: var(--background-dark);
      --accent-color: var(--accent-dark);
      --text-color: var(--text-dark);
      --text-accent: var(--text-accent-01);
    }
  }

  @media (prefers-color-scheme: light) {
    :root {
      --background: var(--background-light);
      --accent-color: var(--accent-light);
      --text-color: var(--text-light);
      --text-accent: var(--text-accent-00);
    }
  }

  a {
    font-weight: 600;
    color: var(--colab_dark-purple);
    text-decoration: inherit;
  }

  h1,
  p {
    margin: 0;
  }

  body {
    font-family: "Inter Tight", sans-serif;
    background-color: var(--background);
    color: var(--text-color);
    padding: 0rem 0.5rem;
  }

  ul {
    list-style-type: none;
    margin: 0;
  }

  @media screen and (min-width: 768px) {
    body {
      padding: 0rem 8rem;
    }
  }
</style>
